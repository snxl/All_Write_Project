    <link rel="shortcut icon" href="../img/favicon.png" />
    <link rel="stylesheet" href="../styles/global.css">
    <link rel="stylesheet" href="../styles/profile.css">
  </head>
  <body>

    <!-- HEADER - Topo do  site-->
        <header>

                   <a href="/dashboard" alt="Home page" class="logo__color"> </a>
                          <nav >
                              <ul class="menu">
                                      <li> <a href="#">Explorar</a>
                                        <ul>
                                          <li><a href="/categoria/aventura/0"> Aventura </a></li>
                                          <li><a href="/categoria/ação/0"> Ação </a></li>
                                          <li><a href="/categoria/fantasia/0"> Fantasia </a></li>
                                          <li><a href="/categoria/ficção/0"> Ficção </a></li>
                                          <li><a href="/categoria/poesia/0"> Poesia </a></li>
                                          <li><a href="/categoria/romance/0"> Romance </a></li>
                                          <li><a href="/categoria/Suspense/0"> Suspense </a></li>
                                          <li><a href="/categoria/Terror/0"> Terror </a></li>
                                          <li><a href="/categoria/Biografia/0"> Biografia </a></li>
                                          <li><a href="/categoria/mistério/0"> Miterário </a></li>
                                          <li><a href="/categoria/espiritual/0"> Espiritual </a></li>
                                        </ul>
                                                                          </li>

                                      <li> <a href="/about2">Sobre</a></li>
                                      <li> <a href="/contact_support">Suporte</a></li>
                              </ul>

                          </nav>


                          <div class="field_user">


                                            <img class="img_login" src="../img/foto_icon_user.svg">
                                                <a href="/profile" id="user__"><%=userName%></a>
                                                <a href="/profile__config"><img class="enginer__icon" src="../img/engrenagem.svg"></a>

                          </div>
            </header>
<!-- FIM do topo do site-->

<!-- INICIO DO MAIN - CORPO DO SITE-->
            <main>

                <!--Incio Campo de busca-->
                <div class="align__search">
                <div class="search__field">
                    <input type="text" id="search" placeholder="Buscar..."/>
                    <img src="../img/search_icon.svg">
                </div>

                <button type="submit" id="publish" name="publish"><a href="/add_book" style="text-decoration: none; color: white;">Publicar livro</a></button>


              </div>
                 <!--Fim Campo de busca-->


                 <!--Inicio Bloco do perfil do usuário-->
                 <div class="align__profile">
                      <section class="user_profile">

                              <img src="<%=route%>" class="photo__profile">

                              <div class="text__profile">
                                          <h1><a href="#" ><%=userName%></a></h1>
                                              <h2> <%=description%> </h2>
                              </div>
                      </section>



                    <section class="user_books">
                          <div class="my__publications">
                              <div class="title__publication">
                                  <h1>Minhas publicações</h1>
                              </div>

                              <!-- Carrossel JS primeiro bloco = Meus livros -->
                              <article class="my__books" id="carrossel__my__books">

                                                    <% books.forEach(element =>{%>

                                                      <div class="book__block" >
                                                        <a href="/reader_book/<%=element.id%>"><img src="https://localhost:3600/files/<%=element.image%>" style="width: 120px; height: 150px;"></a>
                                                      </div>

                                                    <%})%>

                              </article>

                              <div class="btn__publication">

                              </div>

                          </div>

                          <div class="community">
                            <div class="title__community">
                              <h1>Comunidade</h1>
                        </div>

                          </div>

                          <div class="my__reading">
                              <div class="title__reading">
                                    <h1>Minha Leitura</h1>


                                    <div class="btn__my__reading">
                                                  <img class="previus__reading" src="../img/previus__img.svg">
                                                  <img class="next__reading" src="../img/next__img.svg">
                                     </div>



                              </div>


                          </div>

                      </section>
              </div>




            </main>




<!-- FIM DO MAIN - CORPO DO SITE-->

<footer>

  <h1>All Wirte © - Todos os direito reservados </h1>

</footer>

<script src="/javascripts/profile.js"></script>
  </body>
</html>
